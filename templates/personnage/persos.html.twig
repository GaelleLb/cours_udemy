{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block maintitle %} Liste des Personnages {% endblock %}


{% block body %}
    <table class="table">
        <tr class="thead-dark">
            <th>Image</th>
            <th>Pseudo</th>
            <th>Age</th>
            <th>Sexe</th>
            <th>Force</th>
            <th>Agilit√©</th>
            <th>Intelligence</th>
        </tr>
        {% for player in players %}
        <tr>  
            <td><img src="{{ asset('images/personnages/' ~ player.pseudo ~ '.png') }}" alt=""></td>  
            <td><a href="{{ path('display_perso', {'pseudo' : player.pseudo|lower}) }}">{{player.pseudo}}</a></td>
            <td>{{player.age}}</td>
            <td>
                {% if player.sexe %}
                    Homme
                {% else %}
                    Femme
                {% endif %}
            </td>
            <td>{{player.carac.force}}</td>
            <td>{{player.carac.agi}}</td>
            <td>{{player.carac.intel}}</td>
        </tr>
        {% endfor %}
    </table>





{% endblock %}
